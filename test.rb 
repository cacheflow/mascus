require "mechanize"

agent = Mechanize.new 

page = agent.get("http://www.mascus.com/john+deere/categorypath%3dagriculture/+/2,100,relevance,search.html")
page.links.each do |link| 

if link.text.start_with?("John Deere") && link.href.start_with?("/agriculture/") && !link.href.to_s.end_with?("modelgroup.html")
doc = agent.get("http://www.mascus.com#{link.href}")
title = []
puts doc.at("//span[@itemprop = 'description']").text if !nil?
end
end
